    <!-- CONTENT -->
    <section id="content">

        <!-- MAIN -->
        <main>
            <div class="head-title">
                <div class="left">
                    <h1>Order Managment</h1>
                    <!-- <ul class="breadcrumb">
						<li>
							<a href="#">Dashboard</a>
						</li>
						<li><i class='bx bx-chevron-right' ></i></li>
						<li>
							<a class="active" href="#">Home</a>
						</li>
					</ul> -->
                </div>

            </div>

            

            <div class="container " style="background-color: rgb(233, 230, 221);">
                <!-- <div class="container-head p-2">
                <button class="p-3 bg-black" style="border-radius: 10px;"><a class="text-white" href="/admin/addCateogaryManagment" >Add Cateogary</a></button>
                <button class="p-3 bg-black" style="border-radius: 10px;"><a class="text-white" href="/admin/unlistCateogaryManagment" >Unlisted Cateogary</a></button>
            </div> -->
                <% for(let i=0;i<orders.length;i++) { %>
                    <div class="container-body bg-white d-flex justify-content-between m-2 text-dark"
                        style="border-radius: 20px;">

                        <div class="product d-flex mt-3">
                            <a href="/admin/ordersDetail?id=<%= orders[i]._id %>"><img
                                    src="<%= orders[i]. orderItems.image[0]%>" alt="jsggs" style="width:150px"></a>

                            <div class="product-body ">

                                <h5>Status:<%= orders[i].orderItems.orderStatus %>
                                </h5>
                                <p></p>
                                <p>Email:<span class="text-primary">
                                        <%= orders[i].userDetails[0].email %>
                                    </span><br>Name:<span class="text-primary">
                                        <%= orders[i].userDetails[0].name %>
                                    </span></p>


                            </div>


                        </div>
                        <div class="product d-flex mt-4">

                            <div class="product-body   ">
                                <p>orderId:<%= orders[i]._id %>
                                </p>
                                <p>payment Method:<%= orders[i]. paymentMethod %>
                                </p>
                                <p>product name:<%= orders[i]. orderItems. pName%>
                                </p>
                                <p>quantity:<%= orders[i]. orderItems. quantity%>
                                </p>
                                <p> Price:â‚¹ <span class="text-success">
                                        <%= orders[i]. orderItems. quantity*orders[i]. orderItems.price %>
                                    </span></p>
                            </div>
                        </div>
                        <div class="product d-flex mt-4">

                            <div class="product-body  m-2 ">

                                <form action="/api/updateOrderStatus?id=<%= orders[i]. orderItems._id%>" method="post">
                                    <label for="paymentMethod">change status:</label>
                                    <select id="paymentMethod" name="status">
                                        <option value="<%= orders[i]. orderItems.orderStatus%>" hidden></option>
                                        <option value="pending">pending</option>
                                        <option value="shipped">shipped</option>
                                        <option value="delivered">delivered</option>
                                        <option value="canceled">canceled</option>
                                        <option value="ordered">ordered</option>
                                    </select>

                                    <!-- You can include a submit button if this dropdown is part of a form -->
                                    <!-- <button class="btn  btn-danger" type="submit" data-toggle="modal"
                                        data-target="#confirmationModal">save changes</button> -->
                                    <input type="submit" value="submit">
                                </form>
                            </div>
                        </div>


                    </div>
                    <% } %>

            </div>
        </main>

    </section>

