            const errorElement5 = document.getElementById('errorElement5');
            const errorElement6 = document.getElementById('errorElement6');
            const errorElement7 = document.getElementById('errorElement7');
            const errorElement8 = document.getElementById('errorElement8');
            const errorElement9 = document.getElementById('errorElement9');
            const errorElement10 = document.getElementById('errorElement10');
           

            if (productName.trim() === '') {
                productErr.push('This field is required')
            }

            if (brandName.trim() === '') {

                brandErr.push('This field is required')

            }


            if (subTitle.trim() === '') {

                subTitleErr.push('This field is required')

            }

            if (descriptionHeading.trim() === '') {

                descriptionHeadingErr.push('This field is required')

            }
            if (description.trim() === '') {


                descriptionErr.push('This field is required')


            }
            if (firstPrice.trim() === '') {

                firstPriceErr.push('This field is required')


            }
            if (lastPrice.trim() === '') {

                lastPriceErr.push('This field is required')

            }

            if (discount.trim() === '') {

                discountErr.push('This field is required')

            }

            if (inStock.trim() == '') {

                inStockErr.push('This field is required')

            }

            if (color.trim() == '') {

                colorErr.push('This field is required')

            }

            // if (image.trim() == '') {
            //     imageErr.push('This field is required')
