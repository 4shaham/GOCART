						</li>
					</ul> -->
                </div>

            </div>


            <div class="container " style="background-color: rgb(233, 230, 221);">
                <div class="container-head p-2 text-end">
                    <a href="">Edit Product</a>
                </div>
                <form action="/admin/editproduct?id=<%= Product._id %>" method="POST" enctype="multipart/form-data"
                    style="background-color: antiquewhite;">
                    <div class="container " style="background-color: rgb(110, 107, 99);">
                        <div class="input-box">
                            <div>
                                <label for="pName">Product Name</label>
                                <div>
                                    <input type="text" value="<%=Product.pname  %>" name="pname" id="pName" required>
                                    <p id="errorElement1" class="text-danger "></p>
                                </div>
                            </div>

                            <div>
                                <label for="bName">Brand Name</label>
                                <div>
                                    <input type="text" value="<%=Product.bname  %>" name="bname" id="bName" required>
                                    <p id="errorElement2" class="text-danger"></p>
                                </div>
                            </div>

                            <div>
                                <label for="category">Category</label>
                                <select name="category" id="category " value="<%=Product.categary %>">
                                    <% for(let i=0;i<cateogary.length;i++) { %>
                                        <option>
                                            <%=cateogary[i].categary %>
                                        </option>
                                        <% } %>
                                </select>
                            </div>

                        </div>

                        <div class="input-box">
                            <div>
                                <label for="subTitle">SubTitle</label>
                                <div>
                                    <input type="text" value="<%=Product.subtitle %>" name="subtitle" id="subTitle"
                                        required>
                                    <p id="errorElement3" class="text-danger"></p>
                                </div>
                            </div>

                            <div>
                                <label for="descrption-head">Description Heading</label>
                                <div>
                                    <input type="text" value="<%=Product.descriptionheading %>"
                                        name="descriptionheading" id="dHeading">
                                    <p id="errorElement4" class="text-danger"></p>
                                </div>
                            </div>
                        </div>

                        <div class="input-box">
                            <div>
                                <label for="description">Description</label>
                                <div>
                                    <input name="description" value="<%=Product.description %>" rows="5" cols="50"
                                        class="description" id="Des" required>
                                    <p id="errorElement5" class="text-danger"></p>
                                </div>
                                <!-- <textarea name="description"  rows="5" cols="50" class="description" required></textarea> -->
                            </div>
                        </div>

                        <div class="input-box">
                            <div>
                                <label for="firstPrice">First Price</label>
                                <div>
                                    <input type="number" value="<%=Product.firstprice %>" name="firstprice"
                                        id="firstprice" required>
                                    <p id="errorElement6" class="text-danger"></p>
                                </div>
                            </div>

                            <div>
                                <label for="lastPrice">Last Price</label>
                                <div>
                                    <input type="number" value="<%=Product.lastprice %>" name="lastprice" id="lastprice"
                                    onkeyup="calculateDiscount()"    required>
                                    <p id="errorElement7" class="text-danger"></p>
                                </div>
                            </div>
                            <div>
                                <label for="discount">Discount</label>
                                <div>
                                    <input type="number" value="<%=Product.discount %>" name="discount" id="discount"
                                        readonly>
                                    <p id="errorElement8" class="text-danger"></p>
                                </div>
                            </div>
                        </div>

                        <div class="input-box">
                            <div>
                                <label for="colour">Colour</label>
                                <div>
                                    <input type="text" value="<%=Product.color %>" name="color" id="color" required>
                                    <p id="errorElement9" class="text-danger"></p>
                                </div>
                            </div>

                            <div>
                                <label for="inStock">In Stock</label>
                                <div>
                                    <input type="number" value="<%=Product.instock %>" name="instock" id="iStock"
                                        required>
                                    <p id="errorElement10" class="text-danger"></p>
                                </div>
                            </div>
                        </div>

                        <div class="input-box">
                            <div>
                                <label for="image">Image</label>
                                <input type="file" name="image" multiple>
                            </div>

                            <!-- <div>
                                <input type="radio" name="new" value="1">
                                <label for="new">Newly launched</label>
                            </div> -->


                        </div>


                        <!-- <div class="input-box">
                            <div>
                                <label for="image">Image Upload</label>
                                <div class="image-upload">
                                    <span class="inner">Drag & drop images here or 
                                        <span class="select">Browse</span></span>
                                    <input type="file" name="pImage" required multiple>
                                </div>
                            </div>
        
                        </div> -->

                        <div class="container1">

                        </div>


                        <div class="btn-container">
                            <button class="btn" id="btn">Submit</button>
                        </div>


                        <div>
                            <% for( let i=0;i<Product.image.length;i++) {%>
                                <!-- <i class="bi bi-trash3-fill text-black fs-3" ><img src="<%=Product.image[i] %>" alt="" style="width: 150px;"   ></i> <a href=""></a> -->
                                <div style="position: relative; display: inline-block;">
                                    <img src="<%=Product.image[i] %>" alt="" style="width: 150px;">
                                    <a href="/api/deleteImgEditProduct?name=<%=Product.image[i] %>&id=<%=Product._id %>"
                                        class="delete-link" data-product-id="">
                                        <i class="bi bi-trash3-fill text-black "
                                            style="position: absolute; top:10px; right:-5px;"></i>
                                    </a>
                                </div>
                                <% } %>
                        </div>



                    </div>
                </form>



            </div>


    </section>
    <!-- CONTENT -->
    <script>

        function calculateDiscount(){
   
            const firstPrice = document.getElementById('firstprice').value;
            const lastPrice = document.getElementById('lastprice').value;

            let lastPriceErrMsg=[] 

            const errorElement8 = document.getElementById('errorElement8');

            if(  lastPrice < firstPrice   ){
                console.log('hiiii');
                lastPriceErrMsg.push('you must Entered the price will be lessthan to firstPrice')
            }

            errorElement7.innerText=lastPriceErrMsg.join('.')

        

            const discount = document.getElementById('discount');

            const discountPercentage = ((firstPrice - lastPrice) / firstPrice) * 100;
          
            discount.value=Math.round( discountPercentage)              
         
            console.log(firstPrice,lastPrice,Math.round(lastPrice*100/firstPrice));

        }

        var btn = document.getElementById('btn')

        btn.addEventListener('click', (event) => {
            event.preventDefault()

            var form = btn.form
  
            const productName = document.getElementById('pName').value;
            const brandName = document.getElementById('bName').value;
            const subTitle = document.getElementById('subTitle').value;
            const descriptionHeading = document.getElementById('dHeading').value;
            const description = document.getElementById('Des').value;
            const firstPrice = document.getElementById('firstprice').value;
            const lastPrice = document.getElementById('lastprice').value;
            const discount = document.getElementById('discount').value;
            const color = document.getElementById('color').value;
            const inStock = document.getElementById('iStock').value;
            // const image = document.getElementById('img').value;




            console.log(productName, brandName);


            let productErr = []
            let brandErr = []
            let subTitleErr = []
            let descriptionHeadingErr = []
            let descriptionErr = []
            let firstPriceErr = []
            let lastPriceErr = []
            let discountErr = []
            let colorErr = []
            let inStockErr = []
            let imageErr = []


            const errorElement1 = document.getElementById('errorElement1');
            const errorElement2 = document.getElementById('errorElement2');
            const errorElement3 = document.getElementById('errorElement3');
