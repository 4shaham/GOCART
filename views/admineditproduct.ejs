                inStockErr.push('The stock must be greater than 0')
            }









            errorElement1.innerText = productErr.join('.')
            errorElement2.innerText = brandErr.join('.')
            errorElement3.innerText = subTitleErr.join('.')
            errorElement4.innerText = descriptionHeadingErr.join('.')
            errorElement5.innerText = descriptionErr.join('.')
            errorElement6.innerText = firstPriceErr.join('.')
            errorElement7.innerText = lastPriceErr.join('.')
