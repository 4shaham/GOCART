    <div class="container mb-5  mt-5 ">
      <div class="row">
        <div class="col-md-3">
          <div class="osahan-account-page-left shadow-sm bg-black h-100">

            <ul class="nav nav-tabs flex-column border-0 pt-4 pl-4 pb-4" id="myTab" role="tablist">
              <li class="nav-item">
                <a class="nav-link text-white" id="addresses-tab" data-toggle="tab" href="/addAddress" role="tab"
                  aria-controls="addresses" aria-selected="false"><i class="fa-solid fa-plus  text-white"></i> Add
                  Addresses</a>
              </li>
            </ul>
          </div>
        </div>
        <div class="col-md-9">
          <div class="osahan-account-page-right shadow-sm bg-black p-4 h-100">
            <div class="tab-content" id="myTabContent">
              <div class="tab-pane fade  active show" id="addresses" role="tabpanel" aria-labelledby="addresses-tab">
                <h4 class="font-weight-bold mt-0 mb-4 text-white">Manage Addresses</h4>
                <div class="row">
                  <% if(addresData) {%>
                    <% for(let i=addresData?.length-1;i>=0;i--) { %>
                      <div class="col-md-6">
                        <div
                          class="bg-white card addresses-item mb-4 border ? 'border-primary border-5' : 'border-secondary' %> shadow"
                          style="box-shadow:white;">
                          <div class="gold-members p-4">
                            <div class="media">
                              <div class="mr-3"><i class="icofont-ui-home icofont-3x"></i>
                              </div>
                              <div class="media-body">
                                <h6 class="mb-1 text-secondary">Name:
                                  <%= addresData[i].name %>
                                </h6>
                                <p class="text-black">
                                <p>Pin code:<%= addresData[i].postalCode %>
                                </p>
                                <p>Address:<%= addresData[i].address %>
                                </p>
                                <p>PH No:<%= addresData[i].phoneNumber %>
                                </p>
                                </p>
                                <p class="mb-0 text-black font-weight-bold">
                                  <a class="text-primary mr-3" data-toggle="modal"
                                    href="/editAddress?id=<%= addresData[i]._id %>"
                                    onclick="return confirm('Are  you sure want to edit this address?');"
                                    data-target="#add-address-modal" href="">
                                    <i class="fa-solid fa-pencil text-primary px-2"></i>
                                  </a>
                                  <a class="text-danger" data-toggle="modal" data-target="#delete-address-modal"
                                    href="/api/deleteAddress?id=<%= addresData[i]._id %>"
                                    onclick="return confirm('Are  you sure want to delet this address?')">
                                    <i class="fa-solid fa-trash-can text-danger px-2"></i> </a>
                                </p>

                                <% if(addresData[i]. defaultAddress==true) { %>
                                  <form action="" method="post">

                                    <button class="btn default" type="submit">Default</button>
                                  </form>

                                  <% } else { %>
                                    <form action="/api/makeDefault?id=<%= addresData[i]._id %>" method="post">
                                      <button class="btn default" type="submit">Set as Default</button>
                                    </form>

                                    <% } %>


                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                      <% } %>
                        <% } %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>










    <!-- footer -->
    <div class="container-fluid  py-5 text-white" style="background-color: rgba(24, 23, 23, 0.584);">
